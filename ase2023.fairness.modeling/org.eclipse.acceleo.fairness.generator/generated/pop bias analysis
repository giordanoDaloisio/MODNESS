from fairnessMetric import FairnessMetric, binarize

import pandas as pd
from operators import SingleOperator



file_path = 'libraries.csv'
predicted_label_name = 'ranking'
ground_truth_label_name = ''
data = pd.read_csv(file_path)




# High rank
binarize(data, 'ranking', SingleOperator.GREATER_EQUAL, 0.8, True)
# Frequent items
binarize(data, 'frequency', SingleOperator.GREATER_EQUAL, 0.8, True)
# High rank
binarize(data, 'ranking', SingleOperator.GREATER_EQUAL, 0.8, True)
# Frequent items
binarize(data, 'frequency', SingleOperator.GREATER_EQUAL, 0.8, True)
 



indexes = [
frequency
]
dataset_unprivileged_group = {'race': 0, 'sex': 0}
dataset_privileged_group = {'race': 1, 'sex': 1}
dataset_positive_outcome = 1
threshold = 1.0

tolerance_value = 0.2


metrics = FairnessMetric(data, dataset_unprivileged_group, dataset_privileged_group,
                         ground_truth_label_name, predicted_label_name, dataset_positive_outcome)




